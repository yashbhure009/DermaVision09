generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
}

model SkinAnalysis {
  id              String    @id @default(cuid())
  imageBase64     String    // Store image as base64
  imagePath       String?   // Optional: path to local image file
  symptoms        String    // Comma-separated or JSON symptoms
  riskLevel       String    // "low", "medium", "high"
  skinConditions  String    // JSON array of conditions detected
  recommendations String    // JSON array of recommendations
  aiResponse      String    // Full AI response from Gemini
  confidence      Float?    // Confidence score from AI
  analysisDate    DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  notes           String?   // Additional user notes
  
  @@index([analysisDate])
  @@index([riskLevel])
}
